<div class="section9">
  <div class="container">
    <form action="/expense" method="POST">
    <div class="row">
      <div class="row">
        <div class="input-field col s12">
             <i class="material-icons prefix">account_circle</i>
          <input type="text" name="date" class="datepicker">
          <label for="date">Date</label>
        </div>
      </div>
        <div class="row">
        <div class="input-field col s12">
             <i class="material-icons prefix">account_circle</i>
          <input id="expensetype" type="text" name="expensetype" class="validate">
          <label for="expensetype">Expense Type</label>
        </div>
      </div>
        <div class="row">
        <div class="input-field col s12">
             <i class="material-icons prefix">account_circle</i>
          <input id="amountpaid" type="text" name="amountpaid" class="validate">
          <label for="amountpaid">Amount Paid</label>
        </div>
      </div>
      <div class="row">
         <div class="input-field col s12">

            <select name="modeofpayment">
                    <option name="group2" value="cash" >Cash</option>
                    <option name="group2" value="Cheque" >Cheque</option>
                    <option name="group2" value="credit/debitcard" >Credit/Debit Card</option>
                    <option name="group2" value="mobilewallet" >Mobile Wallet</option>
                    <option name="group2" value="onlinepayment" >Online Payment</option>
                    <option name="group2"  value="paytm" >Paytm</option>
            </select>
            <label for="modeofpayment" name="modeofpayment" >Mode Of Payment</label>
        </div>
      </div>
       <div class="row">
        <div class="input-field col s12">
             <i class="material-icons prefix">account_circle</i>
          <input id="recipientname" type="text" name="recipientname" class="validate">
          <label for="recipientname">Recipient Name</label>
        </div>
      </div>
       <div class="row">
        <div class="input-field col s12">
             <i class="material-icons prefix">account_circle</i>
          <input id="description" type="text" name="description" class="validate">
          <label for="description">Description</label>
        </div>
      </div>

       
    <input type="hidden" name="instant" value="0"><div class="input-field col l12 s12 m12 center">
            <button class="btn waves-effect waves-light" id="btnsubmit" type="submit" name="register">submit </button>
    
     </form>
    </div>
  </div>

  <div class="section10">
  <div class="row">
    <div class="col s12 m12 l12">
      <table>
        <thead>
          <tr>
              <th>Date</th>
              <th>Type</th>
              <th>Amount</th>
              <th>Mode</th>
              <th>Remarks</th>
              <th>By</th>
              <th>Action</th>
              
          </tr>
        </thead>

        <% expense.forEach(function(expense){ %>
           <tbody>
          <tr>
            <td><%= expense.date %></td>
            <td><%= expense.expensetype %></td>
            <td><%= expense.amountpaid %></td>
            <td><%= expense.modeofpayment %></td>
            <td><%= expense.description %></td>
            <td>uttam12</td>
            <td><a href="/expense/edit/<%= expense._id %>">Edit/</a><a <a onclick="M.toast({html: 'remove succesfully'})" href="/expense/delete/<%= expense._id %>">Delete</a></td>
          </tr> 
        </tbody>
        <% }); %>
      </table>
      </div>
  </div>
  </div>


<script>
   

 $(document).ready(function(){
