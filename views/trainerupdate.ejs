  <div class="section4">
    <form action="/trainer/edit/<%= trainer._id %>" method="POST">
    <div class="row">

      <div class="col s12 m12 l12">
        <div class="container">
          <div class="row">
            <div class="col s12 m12 l12">

       <div class="row">
        <div class="input-field col s12">
             <i class="material-icons prefix">account_circle</i>
          <input id="trainername" type="text" name="trainername" class="validate" value="<%= trainer.trainername%>">
